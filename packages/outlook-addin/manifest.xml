<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
  xsi:type="MailApp">

  <Id>6a71bcce-b6c7-493a-a23d-c9bdcfaaee78</Id>
  <Version>0.2.0</Version>
  <ProviderName>Email Helper</ProviderName>
  <DefaultLocale>vi-vn</DefaultLocale>
  <DisplayName DefaultValue="Email Attachment Helper"/>
  <Description DefaultValue="Upload file lÃªn OneDrive vÃ  chÃ¨n link vÃ o email"/>

  <IconUrl DefaultValue="https://pulpcorn.github.io/email-attachment-helper/icons/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://pulpcorn.github.io/email-attachment-helper/icons/color-192.png"/>
  <SupportUrl DefaultValue="https://pulpcorn.github.io/email-attachment-helper"/>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.5"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://pulpcorn.github.io/email-attachment-helper/taskpane/taskpane.html"/>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteItem</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
  </Rule>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">

      <Requirements>
        <bt:Sets DefaultMinVersion="1.5">
          <bt:Set Name="Mailbox"/>
        </bt:Sets>
      </Requirements>

      <Hosts>
        <Host xsi:type="MailHost">
          <DesktopFormFactor>
            <FunctionFile resid="residTaskPaneUrl"/>

            <ExtensionPoint xsi:type="MessageComposeCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="emailHelperGroup">
                  <Label resid="residGroupLabel"/>
                  <Control xsi:type="Button" id="openTaskPane">
                    <Label resid="residButtonLabel"/>
                    <Supertip>
                      <Title resid="residButtonLabel"/>
                      <Description resid="residButtonDesc"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="residIcon16"/>
                      <bt:Image size="32" resid="residIcon32"/>
                      <bt:Image size="80" resid="residIcon32"/>
                    </Icon>
                    <Action xsi:type="ShowTaskpane">
                      <SourceLocation resid="residTaskPaneUrl"/>
                    </Action>
                  </Control>
                </Group>
              </OfficeTab>
            </ExtensionPoint>
          </DesktopFormFactor>
        </Host>
      </Hosts>

      <Resources>
        <bt:Images>
          <bt:Image id="residIcon16" DefaultValue="https://pulpcorn.github.io/email-attachment-helper/icons/icon-16.png"/>
          <bt:Image id="residIcon32" DefaultValue="https://pulpcorn.github.io/email-attachment-helper/icons/icon-32.png"/>
        </bt:Images>
        <bt:Urls>
          <bt:Url id="residTaskPaneUrl" DefaultValue="https://pulpcorn.github.io/email-attachment-helper/taskpane/taskpane.html"/>
        </bt:Urls>
        <bt:ShortStrings>
          <bt:String id="residGroupLabel" DefaultValue="Email Helper"/>
          <bt:String id="residButtonLabel" DefaultValue="ðŸ“Ž Upload File"/>
        </bt:ShortStrings>
        <bt:LongStrings>
          <bt:String id="residButtonDesc" DefaultValue="Chá»n file, upload lÃªn OneDrive vÃ  chÃ¨n link vÃ o email"/>
        </bt:LongStrings>
      </Resources>

    </VersionOverrides>
  </VersionOverrides>
</OfficeApp>
