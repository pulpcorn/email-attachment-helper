{
  "$schema": "https://developer.microsoft.com/json-schemas/teams/vDevPreview/MicrosoftTeams.schema.json",
  "id": "email-attachment-helper-addin",
  "version": "0.1.0",
  "manifestVersion": "devPreview",
  "name": {
    "short": "Email Attachment Helper",
    "full": "Email Attachment Helper - Tự động upload file lớn"
  },
  "description": {
    "short": "Tự động upload file lớn lên OneDrive và chèn link vào email",
    "full": "Khi đính kèm file lớn hơn 25MB, add-in tự động upload lên OneDrive, set quyền chia sẻ, và chèn link vào email. Thiết kế cho người cao tuổi."
  },
  "developer": {
    "name": "Email Helper",
    "websiteUrl": "https://localhost:3000",
    "privacyUrl": "https://localhost:3000/privacy",
    "termsOfUseUrl": "https://localhost:3000/terms"
  },
  "icons": {
    "outline": "icons/outline-32.png",
    "color": "icons/color-192.png"
  },
  "extensions": [
    {
      "requirements": {
        "capabilities": [
          {
            "name": "Mailbox",
            "minVersion": "1.12"
          }
        ]
      },
      "runtimes": [
        {
          "id": "EventRuntime",
          "type": "general",
          "code": {
            "page": "https://localhost:3000/src/commands/event-handlers.html"
          },
          "lifetime": "short",
          "actions": [
            {
              "id": "onAttachmentsChanged",
              "type": "executeFunction"
            },
            {
              "id": "onMessageSend",
              "type": "executeFunction"
            }
          ]
        },
        {
          "id": "TaskPaneRuntime",
          "type": "general",
          "code": {
            "page": "https://localhost:3000/src/taskpane/taskpane.html"
          }
        }
      ],
      "ribbons": [
        {
          "contexts": ["mailCompose"],
          "tabs": [
            {
              "builtInTabId": "TabDefault",
              "groups": [
                {
                  "id": "emailHelperGroup",
                  "label": "Email Helper",
                  "icons": [
                    {
                      "size": 16,
                      "url": "icons/icon-16.png"
                    },
                    {
                      "size": 32,
                      "url": "icons/icon-32.png"
                    }
                  ],
                  "controls": [
                    {
                      "id": "openTaskPane",
                      "type": "button",
                      "label": "Trạng thái",
                      "icons": [
                        {
                          "size": 16,
                          "url": "icons/icon-16.png"
                        },
                        {
                          "size": 32,
                          "url": "icons/icon-32.png"
                        }
                      ],
                      "supertip": {
                        "title": "Email Attachment Helper",
                        "description": "Xem trạng thái upload file lớn"
                      },
                      "actionId": "openTaskPane"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ],
      "autoRunEvents": [
        {
          "requirements": {
            "capabilities": [
              {
                "name": "Mailbox",
                "minVersion": "1.12"
              }
            ]
          },
          "events": [
            {
              "type": "messageAttachmentsChanged",
              "actionId": "onAttachmentsChanged"
            },
            {
              "type": "messageSending",
              "actionId": "onMessageSend",
              "options": {
                "sendMode": "softBlock"
              }
            }
          ]
        }
      ]
    }
  ],
  "authorization": {
    "permissions": {
      "resourceSpecific": [
        {
          "name": "Mailbox.ReadWrite.User",
          "type": "Delegated"
        }
      ]
    }
  },
  "webApplicationInfo": {
    "id": "YOUR_MICROSOFT_APP_ID",
    "resource": "api://localhost:3000/YOUR_MICROSOFT_APP_ID"
  }
}
